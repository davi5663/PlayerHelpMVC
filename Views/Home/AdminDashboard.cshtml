@model PlayerHelpMVC.Models.AdminModel
@*@model Tuple<PlayerHelpMVC.Models.AdminModel, PlayerHelp.Models.PlayerModel>*@
@{

    Layout = null; //Layout = null means that the page does not have a specific layout
}

<!DOCTYPE html>
<html>
<body>
    <div>
        <center>
            <h1>Admin Dashboard</h1>
        </center>
        <h2>Username: @Model.AdminUsername</h2>
        @*<h2>Username: @Model.Item1.AdminUsername</h2>*@
    </div>
    <table>
        <tr>
            <th style="text-align:center;">Player ID</th>
            <th style="text-align:center;">Username</th>
            <th style="text-align:center;">Position</th>
        </tr>


        @foreach (var players in ViewBag.Players) //Here is where I call my ViewBag from the HomeController
        {
            <tr>
                <td>@players.PlayerLoginID</td>
                <td>@players.Username</td>
                <td>@players.Position</td>
            </tr>

        }
    </table>
    @using (Html.BeginForm("Logout", "Home", FormMethod.Post))
    {
        <a href="javascript:;" onclick="document.forms[0].submit();">Logout</a>
    }


</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src='@Url.Content("~/Scripts/jquery-1.8.2.js")' type='text/javascript'></script>
    <script src='@Url.Content("~/Scripts/jquery.validate.js")' type='text/javascript'></script>
    <script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type='text/javascript'></script>
}

